func bool printstats(string outputfilename, string filename, string meshfilename, int m, real omega, real time) {
      cout << "  Saving solution stats to '" + outputfilename + ".cont' in '" + workdir + "'." << endl;
      cout << "\t" + listparams(paramnames, params);
      if(monitornames[0] != "") cout << ", " + listparams(monitornames, monitors);
      if (omega != 0.0 | m != 0) cout << ", m = " + m + ", omega = " + omega;
      if (time != 0.0) cout << ", time = " + time;
      cout << "." << endl;
      {
        ofstream file(workdir + outputfilename + ".cont", append);
        file.precision(17);
        file << filename << "\t" << meshfilename << "\t";
        for (int k = 0; k < paramnames.n; ++k){
          file << params[paramnames[k]] << "\t";
        }
        if(monitornames[0] != ""){
          for (int k = 0; k < monitornames.n; ++k){
            file << monitors[monitornames[k]] << "\t";
          }
        }
        if (omega != 0.0 | m != 0) file << "\t" << m << "\t" << omega;
        if (time != 0.0) file << "\t" << time;
        file << endl;
      }
      return 0;
    }

func bool printgains(string outputfilename, string basefilename, string meshfilename, int m, real omega, real[int] & gains) {
      cout << "  Saving " + gains.n + " optimal gain(s) to '" + outputfilename + ".gain' in '" + workdir + "'." << endl;
      cout << "\t" + listparams(paramnames, params);
      if(monitornames[0] != "") cout << ", " + listparams(monitornames, monitors);
      cout << ", m = " + m + ", omega = " + omega + "." << endl;
      for (int kk = 0; kk < gains.n; ++kk){
        ofstream file(workdir + outputfilename + ".gain", append);
        file.precision(17);
        file << basefilename << "\t" << meshfilename << "\t";
        for (int k = 0; k < paramnames.n; ++k){
          file << params[paramnames[k]] << "\t";
        }
        if(monitornames[0] != ""){
          for (int k = 0; k < monitornames.n; ++k){
            file << monitors[monitornames[k]] << "\t";
          }
        }
        file << "\t" << m << "\t" << omega << "\t" << gains(kk) << endl;
      }
      return 0;
    }

func bool printevals(string outputfilename, string basefilename, string meshfilename, int m, complex[int] & eigenvalue) {
      cout << "  Saving " + eigenvalue.n + " eigenvalues to '" + outputfilename + ".eval' in '" + workdir + "'." << endl;
      cout << "\t" + listparams(paramnames, params);
      if(monitornames[0] != "") cout << ", " + listparams(monitornames, monitors);
      cout << ", m = " + m << "." << endl;
      for (int kk = 0; kk < eigenvalue.n; ++kk){
        ofstream file(workdir + outputfilename + ".eval", append);
        file.precision(17);
        file << basefilename << "\t" << meshfilename << "\t";
        for (int k = 0; k < paramnames.n; ++k){
          file << params[paramnames[k]] << "\t";
        }
        if(monitornames[0] != ""){
          for (int k = 0; k < monitornames.n; ++k){
            file << monitors[monitornames[k]] << "\t";
          }
        }
        file << "\t" << m << "\t" << eigenvalue(kk) << endl;
      }
      return 0;
    }

